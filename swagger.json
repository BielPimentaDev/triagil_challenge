{
	"openapi": "3.0.1",
	"info": {
		"version": "0.0.1",
		"title": "Pokemon Team API",
		"decription": "API for team managemente"
	},
	"servers": [{ "url": "http://localhost:3000/" }],
	"schema": ["http", "https"],
	"paths": {
		"/api/teams": {
			"get": {
				"summary": "Get all current teams",
				"description": "List all teams",
				"operationId": "teamsList",
				"responses": {
					"200": {
						"description": "Sucesso"
					}
				}
			},

			"post": {
				"summary": "Create a team",
				"description": "Endpoint to create a new team",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"owner": {
										"type": "string",
										"description": "Nome do propriet√°rio"
									},
									"team": {
										"type": "array",
										"items": {
											"type": "string"
										},
										"description": "Lista de membros da equipe"
									}
								},
								"required": ["owner", "team"],
								"example": {
									"owner": "Ash",
									"team": ["pikachu", "blastoise"]
								}
							}
						}
					}
				}
			},
			"responses": {
				"200": {
					"description": "Success"
				},
				"400": {
					"description": "Invalid request"
				}
			}
		},
		"/api/teams/{id}": {
			"get": {
				"sumary": "Get an specific team by its id",
				"description": "Get a specfic team by id",
				"operationId": "getTeam",
				"parameters": [
					{
						"name": "id",
						"in": "path",
						"required": true,
						"type": "string",
						"description": "The id of the team that is being searched"
					}
				],
				"responses": {
					"200": {
						"description": "Team details"
					},
					"404": {
						"description": "Team not found"
					}
				}
			}
		}
	}
}
